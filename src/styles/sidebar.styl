@import '_variables'
@import 'nib'
@import 'rupture'
@import url('https://fonts.googleapis.com/css?family=Roboto+Condensed:400,300,300italic')

:local(.container)
  width 25%
  display inline-block
  background coral
  float left
  position fixed
  top 0
  left 0
  right 75%
  bottom 0
  color #EFEFEF
  box-shadow 2px 0 10px #ccc
  transform-style preserve-3d
  .current-user
    background greyblue
  h3
    width 75%
    display inline-block
    padding-left 1.2rem
    margin 0
    line-height 1
  img
    width 25%
    // border-radius 100%
    display inline-block
  button
    outline none
    background blue
    font-size 1.8rem
    color white
    border none
    width 100%
    padding 1em
  .main-nav
    box-shadow 0 -4px 3px rgba(#333, .1)
  li
    font-weight 300
    color white
    font-size 2rem
    cursor pointer
    background darken(mauve, 10)
    a
      color #EFEFEF
      display inline-block
      width 100%
      padding 1em
      background coral
      transition all .3s ease
    span
      margin-right .5em
    &:not(:last-child)
      margin-bottom 1px
    &:hover
      a
        box-shadow -4px 0 5px rgba(#333, .2)
        transform translateX(15px)