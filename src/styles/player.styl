@import 'nib'
@import 'rupture'
@import url('https://fonts.googleapis.com/css?family=Roboto+Condensed:400,300,300italic')

body
	background darken(#EBEBEB, 5)
	border 2em solid white
	min-height 100vh
	font-weight 300
	font-family 'Roboto Condensed', sans-serif
:local(.player)
	width 400px
	margin 0 auto
	text-align center
	margin-top 10em
	position relative
	// form
	// 	width 100%
	// 	display inline-block
	.track-list
		cursor pointer
	input
		padding .5em
		border-radius 5px
		outline none
		border none
		appearance none
	// 	width 100%
	// 	margin 0 auto
	// 	display inline-block
	.turntable
		content ''
		position absolute
		display inline-block
		border-radius 100%
		width 120px
		height 120px
		background radial-gradient(center, ellipse cover, #2f2f2e 0%, #404340 1%, #2f2f2e 2%, #404340 3%, #2f2f2e 4%, #404340 5%, #2f2f2e 6%, #404340 7%, #2f2f2e 8%, #404340 9%, #2f2f2e 10%, #404340 11%, #2f2f2e 12%, #404340 13%, #2f2f2e 14%, #404340 15%, #2f2f2e 16%, #404340 17%, #2f2f2e 18%, #404340 19%, #2f2f2e 20%, #404340 21%, #2f2f2e 22%, #404340 23%, #2f2f2e 24%, #404340 25%, #2f2f2e 26%, #404340 27%, #2f2f2e 28%, #404340 29%, #2f2f2e 30%, #404340 31%, #2f2f2e 32%, #404340 33%, #2f2f2e 34%, #404340 35%, #2f2f2e 36%, #404340 37%, #2f2f2e 38%, #404340 39%, #2f2f2e 40%, #404340 41%, #2f2f2e 42%, #404340 43%, #2f2f2e 44%, #404340 45%, #2f2f2e 46%, #404340 47%, #2f2f2e 48%, #404340 49%, #2f2f2e 50%, #404340 51%, #2f2f2e 52%, #404340 53%, #2f2f2e 54%, #404340 55%, #2f2f2e 56%, #404340 57%, #2f2f2e 58%, #404340 59%, #2f2f2e 60%, #404340 61%, #2f2f2e 62%, #404340 63%, #2f2f2e 64%, #404340 65%, #2f2f2e 66%, #404340 67%, #2f2f2e 68%, #404340 69%, #2f2f2e 70%, #404340 71%, #2f2f2e 72%, #404340 73%, #2f2f2e 74%, #404340 75%, #2f2f2e 76%, #404340 77%, #2f2f2e 78%, #404340 79%, #2f2f2e 80%, #404340 81%, #2f2f2e 82%, #404340 83%, #2f2f2e 84%, #404340 85%, #2f2f2e 86%, #404340 87%, #2f2f2e 88%, #404340 89%, #2f2f2e 90%, #404340 91%, #2f2f2e 92%, #404340 93%, #2f2f2e 94%, #404340 95%, #2f2f2e 96%, #404340 97%, #404340 97%, #2f2f2e 98%)
		top -60px
		left 50%
		transform translateX(-50%) rotate(0deg)
		border 2px solid #EBEBEB
		.turntable-inner
			transform-origin center center
			background-position center center
			background-size cover
			transform rotate(0deg)
		&.playing
			.turntable-inner
				animation spin 4s linear infinite forwards
	.player-current
		border-radius 1em
		background #EBEBEB
		position relative
		z-index 4
		box-shadow 0 1px 7px rgba(black, .2)
		padding 1em
		width 100%
		text-align center
		.track-title
			color #949494
			text-transform lowercase
			font-size 1.2em
			margin-bottom .25rem
		.track-artist
			color #75D3D1
			font-size .9em
			margin 0
			text-transform capitalize
	.player-controls
		padding .5em 0
		color darken(#949494, 10)
		.fa
			cursor pointer
		.fa-pause, .fa-play
			margin 0 1em
	.player-next
		content ''
		position relative
		display inline-block
		top -2em
		width 100%
		padding 2.5em 1em .5em
		background #636363
		border-radius 1em
		z-index 0
		p
			margin 0
			margin-bottom .4em
			font-size .9em
		.next-label
			color #F97950
			font-style italic
			font-size .8em
		.next-track-title
			color lighten(#9A957F, 10)
		.next-track-artist
			color #75D3D1
	button
		appearance none
		border-radius 0
		border none
		background rgba(0,80,180, .5)
		color white
		margin 0 1em
		text-transform uppercase
		letterspacing .5px
		transition all .2s ease
		display none
	h2
		text-transform uppercase
		font-size 3em
		margin 1.25em 0 .1em
		
@keyframes spin
	from
		transform rotate(0deg)
	to
		transform rotate(360deg)