@import 'nib'
@import 'rupture'
@import url('https://fonts.googleapis.com/css?family=Roboto+Condensed:400,300,300italic')

:local(.wrapper)
	position absolute
	top 0
	left -110%
	width 100%
	text-align left
	table
		background darken(white, 5)
		box-shadow 0 0 5px #ccc
	td
		padding .5em 1em
		color darken(#949494, 10)
	th
		padding 1em
		background darken(#949494, 20)
		color white
		font-weight lighter