@import 'core'

:local(.container)
	text-align left
	width 50%
	padding 1em
	input, textarea
		margin 1rem 2rem
		padding 1.6rem
		border-radius .5em
		border 1px solid lighten(greyblue, 25)
	.room-choices
		input
			display none
			&:checked + span
				color white
		label
			background lighten(greyblue, 15)
			letter-spacing 1px
			color darkblue
			margin calc(1em - 2px)
			padding 1em
			border-radius .5em
			cursor pointer
			border 2px solid transparent
			transition all .2s ease
			&:hover:not(.disabled)
				background white
				border 2px solid greyblue
				color greyblue
			&.disabled
				background #ccc
				color white
				transition all .2s ease
				cursor default
			&:first-child
				margin-left 2em
	.datepicker
		// margin 0 1em
		input
			padding 1em
	.add-attendees
		.user-toggle
			margin 0 2em
			display inline-block
			width 4rem
			height 4rem
			border-radius 100%
			background greyblue
			color white
			position relative
			cursor pointer
			&:before
				position absolute
				top 50%
				transform translateY(-50%)
				line-height 1.5
				left 0
				right 0
				bottom 0
				text-align center
		input
			display none
	.user-modal
		p
			background mediumgrey
			color white
			padding 1em
			border-radius .5em
			margin .5em
			display inline-block
			transition all .2s ease
			cursor pointer
			&:hover
				background greyblue
		&.attendees
			p
				background coral
				&:hover
					background coral
				