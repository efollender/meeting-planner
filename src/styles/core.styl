@import '_variables'
@import url('https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css')

body
  background lighten(greyblue, 40)
  min-height 100vh
  regular()
  display flex
  margin 0
  padding 0
  color darkgrey
h1
  a
    color darkgrey
a
  text-decoration none
  transition all .2s ease
  &:hover
    text-decoration none
ul
  list-style-type none
  text-align left
  margin 0
  padding 0
#root, .view-container, .page-container
  width 100%
.utility-bar
  height 75px
  background lighten(mediumgrey, 10)
  width 100%
  position fixed
  top 0
  z-index 4
.main-content
  width calc(100% - 300px)
  max-width 1440px
  margin-left 300px
  padding-top 75px
  > h1
    cursor pointer
.fa
  margin-right .5em
.home-container
  width 100%
  .current-status
    width 100%
    padding 1em
    .room
      width 33.33%
      display inline-block
      padding-top 30%
      position relative
      p
        position absolute
        bottom 1.5rem
        left 2.5rem
        color #FF6455
        z-index 2
        padding 3em
        background white
        border 2px solid #FF6455
        right 2.5rem
      &:before
        content attr(data-room)
        font-size 2.5rem
        padding-top 30%
        color white
        position absolute
        background coral
        border-radius 5px
        top 1em
        left 1em
        right 1em
        bottom 1em
        transition all .2s ease
      &.occupied
        &:before
          padding-top 2rem
          background darken(coral, 5)
      &.available
        &:before
          background green
      &.alertMeeting
        &:before
          animation alert .5s linear alternate infinite
          
@keyframes alert
  from
    background coral
  to
    background darken(coral, 30)
        